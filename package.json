{
    "name": "vscode-laravel-artisan-commands",
    "publisher": "laurinstapf",
    "displayName": "Laravel Artisan Runner",
    "description": "Run Laravel Artisan commands within Visual Studio Code",
    "version": "1.2.0",
    "engines": {
        "vscode": "^1.89.0"
    },
    "keywords": [
        "laravel",
        "artisan",
        "php",
        "herd"
    ],
    "icon": "images/icon.png",
    "homepage": "https://github.com/laurinstapf/vscode-laravel-artisan",
    "repository": {
        "type": "git",
        "url": "https://github.com/LaurinStapf/vscode-laravel-artisan"
    },
    "bugs": {
        "url": "https://github.com/LaurinStapf/vscode-laravel-artisan/issues"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:**/artisan"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "configuration": {
            "title": "Laravel Artisan",
            "properties": {
                "Artisan.phpEnvironment": {
                    "type": "string",
                    "enum": [
                        "auto",
                        "herd",
                        "local",
                        "docker"
                    ],
                    "enumItemLabels": [
                        "Auto Detect",
                        "Herd",
                        "Local",
                        "Docker"
                    ],
                    "markdownEnumDescriptions": [
                        "Auto detect the local PHP environment.",
                        "Auto detect PHP version Herd is using for the project.",
                        "Use PHP installed on the local machine.",
                        "Docker"
                    ],
                    "default": "auto",
                    "markdownDescription": "Local PHP environment. If you have a value for `#Laravel.phpCommand#` this setting will be ignored and that value will be used instead."
                },
                "Artisan.phpCommand": {
                    "type": "string",
                    "description": "Template for running PHP artisan commands. Use {code} as an optional placeholder for the command to run. e.g. `php \"{code}\"`.\n\nIf no {code} is present, code filepath will be appended to the command."
                },
                "Artisan.basePath": {
                    "type": "string",
                    "default": "",
                    "markdownDescription": "_Relative_ base path for the Laravel project. This is used to resolve paths in the project. e.g. src, code/backend\n\n_Requires extension reload after changing._"
                },
                "Artisan.location": {
                    "type": [
                        "string",
                        "array"
                    ],
                    "default": [],
                    "description": "Additional Artisan locations"
                },
                "Artisan.wsl.enabled": {
                    "type": "boolean",
                    "default": false,
                    "description": "Whether or not to use WSL"
                },
                "Artisan.maxBuffer": {
                    "type": "number",
                    "default": 409600,
                    "description": "Largest amount of data in bytes allowed on stdout or stderr"
                },
                "Artisan.php.location": {
                    "type": "string",
                    "default": "php",
                    "description": "Sets a custom location to the php executable"
                },
                "Artisan.showErrorPopups": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show popups for errors."
                },
                "Artisan.serve.defaultHost": {
                    "type": "string",
                    "default": "localhost",
                    "description": "Sets the default server address for artisan serve"
                },
                "Artisan.serve.defaultPort": {
                    "type": "string",
                    "default": "8000",
                    "description": "Sets the default port address for artisan serve"
                },
                "Artisan.docker.enabled": {
                    "type": "boolean",
                    "default": false,
                    "description": "Should commands get executed using docker?"
                },
                "Artisan.docker.command": {
                    "type": "string",
                    "default": null,
                    "description": "Docker command to get container running"
                }
            }
        },
        "commands": [
            {
                "command": "artisan.namespace.generate",
                "title": "Generate namespace",
                "category": "Artisan"
            },
            {
                "command": "artisan.make.cast",
                "title": "Make Cast",
                "category": "Artisan"
            },
            {
                "command": "artisan.make.controller",
                "title": "Make Controller",
                "category": "Artisan"
            }
        ]
    },
    "scripts": {
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
        "test": "vscode-test",
        "compile": "node esbuild.js",
        "check-types": "tsc --noEmit",
        "watch": "npm-run-all -p watch:*",
        "watch:esbuild": "node esbuild.js --watch",
        "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
        "vscode:prepublish": "npm run package",
        "package": "node esbuild.js --production",
        "installLocal": "vsce package && code --install-extension vscode-laravel-artisan-commands-%npm_package_version%.vsix"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.6",
        "@types/node": "18.x",
        "@types/vscode": "^1.89.0",
        "@typescript-eslint/eslint-plugin": "^7.7.1",
        "@typescript-eslint/parser": "^7.7.1",
        "@vscode/test-cli": "^0.0.9",
        "@vscode/test-electron": "^2.3.9",
        "esbuild": ">=0.27.2",
        "eslint": "^8.57.0",
        "prettier": "^3.0.0",
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "npm-run-all": "^4.1.5",
        "rxjs": "7.8.2",
        "vscode-languageclient": "^9.0.1"
    }
}