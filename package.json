{
    "name": "vscode-laravel-artisan-commands",
    "publisher": "laurinstapf",
    "displayName": "Laravel Artisan Runner",
    "description": "Run Laravel Artisan commands within Visual Studio Code",
    "version": "1.2.0",
    "engines": {
        "vscode": "^1.89.0"
    },
    "keywords": [
        "laravel",
        "artisan",
        "php",
        "herd"
    ],
    "icon": "images/icon.png",
    "homepage": "https://github.com/laurinstapf/vscode-laravel-artisan",
    "repository": {
        "type": "git",
        "url": "https://github.com/LaurinStapf/vscode-laravel-artisan"
    },
    "bugs": {
        "url": "https://github.com/LaurinStapf/vscode-laravel-artisan/issues"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:**/artisan"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "configuration": {
            "title": "Laravel Artisan",
            "properties": {
                "Artisan.basePath": {
                    "type": "string",
                    "default": "",
                    "markdownDescription": "_Relative_ base path for the Laravel project. This is used to resolve paths in the project. e.g. src, code/backend\n\n_Requires extension reload after changing._"
                },
                "Artisan.phpCommand": {
                    "type": "string",
                    "description": "Template for running PHP artisan commands. Use {code} as an optional placeholder for the command to run. e.g. `php \"{code}\"`.\n\nIf no {code} is present, code filepath will be appended to the command."
                },
                "Artisan.phpEnvironment": {
                    "type": "string",
                    "enum": [
                        "auto",
                        "herd",
                        "local",
                        "docker"
                    ],
                    "enumItemLabels": [
                        "Auto Detect",
                        "Herd",
                        "Local",
                        "Docker"
                    ],
                    "markdownEnumDescriptions": [
                        "Auto detect the local PHP environment.",
                        "Auto detect PHP version Herd is using for the project.",
                        "Use PHP installed on the local machine.",
                        "Docker"
                    ],
                    "default": "auto",
                    "markdownDescription": "Local PHP environment. If you have a value for `#Artisan.phpCommand#` this setting will be ignored and that value will be used instead."
                },
                "Artisan.showErrorPopups": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show popups for errors."
                },
                "Artisan.serve.defaultHost": {
                    "type": "string",
                    "default": "localhost",
                    "description": "Sets the default server address for artisan serve"
                },
                "Artisan.serve.defaultPort": {
                    "type": "string",
                    "default": "8000",
                    "description": "Sets the default port address for artisan serve"
                }
            }
        },
        "commands": [
            {
                "command": "artisan.cache.clear",
                "title": "Clear cache",
                "category": "Artisan"
            },
            {
                "command": "artisan.config.cache",
                "title": "Cache config",
                "category": "Artisan"
            },
            {
                "command": "artisan.config.clear",
                "title": "Clear config cache",
                "category": "Artisan"
            },
            {
                "command": "artisan.docs",
                "title": "Docs",
                "category": "Artisan"
            },
